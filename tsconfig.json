{
	"extends": "astro/tsconfigs/strict",
	"exclude": ["node_modules", "dist"],
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"$components/*": ["src/components/*"],
			"$layouts/*": ["src/layouts/*"],
			"$content/*": ["src/content/*"],
			"$images/*": ["src/images/*"],
			"$utils/*": ["src/utils/*"],
			"$styles/*": ["src/styles/*"]
		}
	}
}
