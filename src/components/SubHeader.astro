---
interface Props {
	title: string
	subtitle?: string
}
const { title, subtitle } = Astro.props
---

<header class="border-b border-slate-200 px-4 pb-8 pt-16 text-slate-500">
	<div class="m-auto max-w-6xl">
		<h1 class="text-2xl font-medium">{title}</h1>
		{subtitle && <p class="font-medium">{subtitle}</p>}
	</div>
</header>
